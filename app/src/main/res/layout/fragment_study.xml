<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/head_toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/blacke"/>


    <RadioGroup
        android:id="@+id/rg_class_select"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_class"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="课程"
            android:textSize="@dimen/text_size"
            android:textColor="@color/select_text_bg" />


        <RadioButton
            android:id="@+id/rb_appraisal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@null"
            android:gravity="center"
            android:text="测评"
            android:textSize="@dimen/text_size"
            android:textColor="@color/select_text_bg" />


    </RadioGroup>


    <LinearLayout
        android:id="@+id/ll_rb_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:layout_marginRight="15dp">


        <TextView
            android:id="@+id/tv_class_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bottom_bar"/>

        <TextView
            android:id="@+id/tv_appraisal_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible"
            android:background="@color/bottom_bar"/>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/frame_layout_child"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

</LinearLayout>