<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iv_listview_bg"
    android:orientation="vertical">
    <!--android:background="@drawable/lv_bg1"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_season"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:src="@drawable/iv_cold"/>

        <ImageView
            android:id="@+id/iv_subject"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/iv_math"/>

        <TextView
            android:id="@+id/tv_class_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size14"
            android:text="2017秋佳分数学初一基础班"/>

        <TextView
            android:id="@+id/tv_on_line"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="在线"
            android:padding="2dp"
            android:textSize="@dimen/text_size12"
            android:textColor="@color/white"
            android:background="@drawable/shape_tv_bg1"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/blacke"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">


        <hyxd.parentapp.view.CircleImageView
            android:id="@+id/iv_main_teacher"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/iv_teacher"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/text_size12"
            android:textColor="@color/black9"
            android:text="主讲老师:"
            android:id="@+id/textView" />

        <TextView
            android:id="@+id/tv_main_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size12"
            android:text="丁鹿燕"/>

        <hyxd.parentapp.view.CircleImageView
            android:id="@+id/iv_help_teacher"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/iv_teacher"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text_size12"
            android:textColor="@color/black9"
            android:text="辅导老师:"/>

        <TextView
            android:id="@+id/tv_help_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size12"
            android:text="王向阳"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/blacke"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="13dp"
            android:src="@drawable/iv_time"/>


        <TextView
            android:id="@+id/tv_time_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black6"
            android:textSize="@dimen/text_size14"
            android:text="11-20日 ~ 2-27日每周四"/>

        <TextView
            android:id="@+id/tv_class_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text=""
            android:padding="2dp"
            android:textSize="@dimen/text_size12" />

    </LinearLayout>


</LinearLayout>