<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_more"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/iv_more"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_ranking"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/first"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_ranking"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="1"
            android:textSize="@dimen/text_size15"
            android:textColor="@color/black3"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"/>

        <hyxd.parentapp.view.CircleImageView
            android:id="@+id/iv_main_teacher"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/iv_teacher"/>

        <TextView
            android:id="@+id/tv_ranking_name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="王向阳"
            android:textSize="@dimen/text_size15"
            android:textColor="@color/black3"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_ranking_score"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="90分"
            android:textSize="@dimen/text_size15"
            android:textColor="@color/bottom_bar"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_more_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"

            android:src="@drawable/iv_more"/>

    </LinearLayout>
</LinearLayout>